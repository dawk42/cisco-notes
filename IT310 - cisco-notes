!!!!!!!!!!!!!!!!!!!EIGRP w/ IPV6 !!!!!!!!!!!!!!!!!!!!!!
!! Link-Local address  !!
interface g0/1
ipv6 address fe80::1 link-local

!! enable ipv6 !!
ipv6 unicast-routing

!!enable EIGRP for ipv6
! ROUTER 1
ipv6 unicast-routing
ipv6 router eigrp 2
eigrp router-id 1.0.0.0
no shutdown

! ROUTER 2
ipv6 unicast-routing
ipv6 router eigrp 2
eigrp router-id 2.0.0.0
no shutdown

!! interface w/ ipv6 and eigrp
interface g0/0
ipv6 eigrp 2
exit

